        // Update charts based on filtered data
        async function updateChartsWithFilteredData(data) {
            if (data.length === 0) return;

            // Calculate stats from filtered data
            const authorStats = {};
            data.forEach(post => {
                const author = post.author || 'Unknown';
                if (!authorStats[author]) {
                    authorStats[author] = {
                        total_posts: 0,
                        total_reactions: 0,
                        total_comments: 0,
                        total_shares: 0
                    };
                }
                authorStats[author].total_posts++;
                authorStats[author].total_reactions += post.reactions || 0;
                authorStats[author].total_comments += post.comments || 0;
                authorStats[author].total_shares += post.shares || 0;
            });

            const authorArray = Object.keys(authorStats).map(author => ({
                author,
                ...authorStats[author]
            })).sort((a, b) => b.total_reactions - a.total_reactions);

            // Update bar chart
            if (charts.authorsBar) {
                const topAuthors = authorArray.slice(0, 10);
                charts.authorsBar.data.labels = topAuthors.map(a => a.author);
                charts.authorsBar.data.datasets[0].data = topAuthors.map(a => a.total_reactions);
                charts.authorsBar.update();
            }

            // Update pie chart
            if (charts.postsPie) {
                const topAuthors = authorArray.slice(0, 5);
                charts.postsPie.data.labels = topAuthors.map(a => a.author);
                charts.postsPie.data.datasets[0].data = topAuthors.map(a => a.total_posts);
                charts.postsPie.update();
            }

            // Update donut chart
            if (charts.engagementDonut) {
                const totalReactions = data.reduce((sum, p) => sum + (p.reactions || 0), 0);
                const totalComments = data.reduce((sum, p) => sum + (p.comments || 0), 0);
                const totalShares = data.reduce((sum, p) => sum + (p.shares || 0), 0);

                charts.engagementDonut.data.datasets[0].data = [totalReactions, totalComments, totalShares];
                charts.engagementDonut.update();
            }

            // Update stacked bar chart
            if (charts.postsStacked) {
                const topPosts = data.slice(0, 10);
                charts.postsStacked.data.labels = topPosts.map(p => (p.author || 'Unknown').substring(0, 20) + '...');
                charts.postsStacked.data.datasets[0].data = topPosts.map(p => p.reactions || 0);
                charts.postsStacked.data.datasets[1].data = topPosts.map(p => p.comments || 0);
                charts.postsStacked.data.datasets[2].data = topPosts.map(p => p.shares || 0);
                charts.postsStacked.update();
            }
        }

        // Export to CSV
        function exportToCSV() {
            const data = allPosts;
            if (data.length === 0) {
                showToast('No data to export');
                return;
            }

            const headers = ['Author', 'Text', 'Reactions', 'Comments', 'Shares', 'URL'];
            const rows = data.map(post => [
                post.author || '',
                (post.text_preview || '').replace(/"/g, '""'),
                post.reactions || 0,
                post.comments || 0,
                post.shares || 0,
                post.post_url || ''
            ]);

            let csv = headers.join(',') + '\n';
            rows.forEach(row => {
                csv += row.map(cell => `"${cell}"`).join(',') + '\n';
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `facebook-analytics-${new Date().toISOString().split('T')[0]}.csv`;
            a.click();

            showToast('CSV exported successfully!');
        }

